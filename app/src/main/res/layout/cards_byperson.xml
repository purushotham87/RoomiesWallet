<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="cards main container">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#006B8D"

        >


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <TableRow>

                <TextView
                    android:id="@+id/textViewCreditIcon1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="30dp"
                    android:text="&#xf156;"
                    android:paddingTop="2dp"
                    android:layout_weight="0.1"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <TextView
                    android:id="@+id/textViewCreditIcon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"

                    android:text="Credit Amount :"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>


                <TextView
                    android:id="@+id/textViewCredit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#FFFFFF"
                    android:text="Large Text"
                    android:textSize="18sp"
                    android:layout_weight="1.2"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

</TableRow><TableRow>
            <TextView
                android:id="@+id/textViewDebitIcon1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="30dp"
                android:text="&#xf156;"
                android:layout_weight="0.1"
                android:textSize="18sp"
                android:paddingTop="2dp"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TextView
                    android:id="@+id/textViewDebitIcon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Debit Amount  :"
                    android:textSize="18sp"
                    android:layout_weight="1"

                    android:textColor="#FFFFFF"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>


                <TextView
                    android:id="@+id/textViewDebit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Large Text"
                    android:textSize="18sp"
                    android:layout_weight="1.2"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FFFFFF"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

</TableRow><TableRow>

            <TextView
                android:id="@+id/textViewStatusIcon1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="30dp"
                android:text="&#xf156;"
                android:paddingTop="2dp"
                android:layout_weight="0.1"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                    android:id="@+id/textViewStatusIcon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#FFFFFF"
                    android:text="Status              :"
                    android:textSize="18sp"
                    android:layout_weight="1"

                    android:textAppearance="?android:attr/textAppearanceMedium"/>


                <TextView
                    android:id="@+id/textViewStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Large Text"
                    android:textSize="18sp"
                    android:layout_weight="1.2"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FFFFFF"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>



            </TableRow>

        </TableLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>


